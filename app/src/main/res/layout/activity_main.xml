<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="www.eightstudio.id.udacitybasicone.MainActivity">


    <RadioGroup
        android:id="@+id/radioButtonGroupSatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tester Satu"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tester Dua"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tester Tiga"
            />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teste Empat"
            />

    </RadioGroup>

    <Button
        android:id="@+id/btnTampilData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tampil Pilihan"
        />

</LinearLayout>
